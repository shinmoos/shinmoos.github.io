<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>한글 존칭어 삭제</title>
    <style>
        #workPad {            
            resize: vertical;                       
            box-sizing: border-box;
            border: 1px solid #ccc;
            display: block;
        }
        #outPut {
        	border: 1px solid #ccc;
            display: block;
            font-size:90%;
        }
        body,
        html {
            height: 100%;
            margin: 6;
            background-color: white;
        }
    </style>
    <script src="https://firebasestorage.googleapis.com/v0/b/sezzigaldrive.appspot.com/o/marked.js?alt=media&token=e16f929d-d06e-481a-8032-e7f352932b0d"></script>
</head>
<body>
    <textarea id="workPad" style="width: 100%;height: 20%;resize: none;"></textarea>
    <div id="outPut"></div>
    <script>
        const ta = document.getElementById("workPad");
        const outPut = document.getElementById("outPut");
        ta.addEventListener("input", () => {
           simplify();
        });
        const r = {
            "합니다": "한다",
            "입니다": "이다",
            "습니다": "다",                 
            "됩니다":"된다",
            "않습니다":"않는다",
            "가집니다":"가진다",
            "냅니다":"낸다",
            "없습니다":"없다",
            "집니다":"진다",
            "바랍니다":"바란다",
            "옵니다":"온다",
            "세요":"라",
            "여러분은":"사용자는",
            "가리킵니다":"가리킨다", 
            "//":"<br>"
        };
        function simplify() {
            var t = ta.value;
            for (let [key, value] of Object.entries(r)) {
                let regex = new RegExp(key, "g");
                t = t.replace(regex, value);
            }
            outPut.innerHTML = marked(t);
        };
    </script>
</body>
</html>
